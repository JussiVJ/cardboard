{
  "schemaVersion": 1,
  "id": "bukkitfabric",
  "version": "${version}",

  "name": "Bukkit for Fabric",
  "description": "An implementation of the popular Spigot API for Fabric",
  "authors": [
    "Isaiah"
  ],
  "contact": {
    "homepage": "https://javazilla.com/",
    "sources": "https://github.com/bukkitfabric/bukkit4fabric/"
  },

  "license": "GPLv3",
  "icon": "assets/fabricbukkit/icon.png",
  "accessWidener" : "bukkitfabric.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.javazilla.bukkitfabric.BukkitFabricMod"
    ]
  },
  "mixins": [
    "bukkitfabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.10.8",
    "minecraft": "*"
  },
  "suggests": {
    "flamingo": "*"
  }

}